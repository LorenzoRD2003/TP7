{{> navbar this}}
<div class="mt-5 mb-3 container-sm">
    <h2>Zona de modificaciones de horarios de películas.</h2>
</div>
<div class="container-sm bg-light mb-3 p-3 border">
    <div class="mb-3 form-group">
        <h3>Agregar una opción</h3>
    </div>
    <div class="mb-3 form-group">
        <label for="adminChangesChoicesCinemasList" class="form-label">Cine</label>
        <select class="form-select" id="adminChangesChoicesCinemasListID">
            <option disabled selected>Seleccione un cine</option>
            {{#each cinemas}}
                <option data-cinema-id="{{this.ID_Cinema}}">{{this.cinema_name}} - {{this.address}} - {{this.city}}</option>
            {{/each}}
        </select>
    </div>
    <div class="mb-3 form-group">
        <label for="adminChangesChoicesMoviesList" class="form-label">Película</label>
        <select class="form-select" id="adminChangesChoicesMoviesListID">
            <option disabled selected>Seleccione una película</option>
            {{#each movies}}
                <option data-movie-id="{{this.ID_Movie}}">{{this.movie_name}} - {{this.director}}</option>
            {{/each}}
        </select>
    </div>
    <div class="mb-3 form-group">
        <label for="adminChangesChoicesSchedule" class="form-label">Horario</label>
        <input type="time" class="form-control" id="adminChangesChoicesScheduleID" value="" placeholder="Horario">
    </div>
    <div class="mb-3 form-check">
        <button type="button" class="btn btn-danger" onclick="addNewChoice()">Ingresar opción</button>
    </div>
</div>

<div class="container-sm bg-light mb-3 p-3 border">
    <div class="mb-3 form-group">
        <h3>Eliminar una opción</h3>
    </div>
    <div class="mb-3 form-group">
        <select class="form-select" id="adminChangesChoicesListID">
            <option disabled selected>Seleccione una opción de reserva</option>
            {{#each choices}}
                <option data-choice-id="{{this.ID_Choice}}">{{this.cinema_name}} - {{this.movie_name}} - {{this.movie_schedule}}</option>
            {{/each}}
        </select>
    </div>
    <div class="mb-3 form-check">
        <button type="button" class="btn btn-danger" onclick="deleteChoice()">Eliminar opción</button>
    </div>
</div>

{{> returnAdminChangesZone this}}

                        <button type="submit" class="btn btn-success btn-lg" name="adminChangesSelectorName" value="Cinemas">Modificar cines</button>
                    </div>
                    <div class="col-sm-4 mx-auto">
                        <button type="submit" class="btn btn-success btn-lg" name="adminChangesSelectorName" value="Movies">Modificar películas</button>
                    </div>
                    <div class="col-sm-4 mx-auto">
                        <button type="submit" class="btn btn-success btn-lg" name="adminChangesSelectorName" value="Choices">Modificar horarios</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

